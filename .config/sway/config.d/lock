exec swayidle -w \
          timeout 240 'pgrep swaylock || swaylock-fancy' \
          timeout 250 'swaymsg "output * dpms off"' \
          timeout 300 'systemctl suspend' \
          resume 'swaymsg "output * dpms on"' \
          before-sleep 'pgrep swaylock || swaylock-fancy'


### Manual Lock
bindsym --release $mod+Control+s exec 'pgrep swaylock || swaylock-fancy'

bindswitch --reload --locked lid:off exec '(pgrep swaylock || swaylock-fancy) && systemctl suspend' 
